<LandingScreen>:
    name: '_landing_screen_'
    id: first_screen
    
    BoxLayout:
        orientation: "vertical"
        id: filemanager
        Label: 
            id: landing_title
            size_hint: (1.0,0.2)
            text: "Please choose your pickle file for verification :"
        FileChooserIconView:
            size_hint: (1.0,0.8)
            id: filechooser
            path: "./"
            on_selection: app.path = self.selection and self.selection[0] or ''
    BoxLayout:
        orientation: "vertical"
        id: first_screen_boxlayout
        size_hint: (1.0,0.1)
        TextInput:
            hint_text: 'Start Page:'
            on_text : app.page_num = self.text
        Button:
            text: 'Start!'
            on_press : app.start_verf() 
       


<VerfScreen>:
    name: '_verf_screen_'
    id: verf_screen
    BoxLayout:
        orientation: "vertical"
        id: verf_screen_boxlayout
        
        BoxLayout:
            orientation: "horizontal"
            id: attributes_labels
            size_hint: (1, 0.3)
            Label:
                id: boulder_title
                text: root.boulder_number
            Label:
                id: page_title
                text: root.page_number
            Label:
                id: location_title
                text: root.current_location
            Label:
                id: rocktype_title
                text: root.current_rocktype
            Label:
                id: size_title
                text: root.current_size
            
               
                
        BoxLayout:
            id: image_box_layout
            orientation : "horizontal"
            Image:
                id: kk
                texture: root.beeld.texture

            TextInput:
                id: verf_text
                text: root.currenttext
                font_name: '/System/Library/Fonts/Supplemental/Times New Roman.ttf'
        BoxLayout:
            id: button_boxlayout
            orientation: "horizontal"
            padding: 10
            size_hint: (1, 0.15)
            Button:
                id: accept_button
                text: "<"
                size_hint: (0.33, 1)
                on_press: root.go_back()
            Button:
                id: crop_button
                text: "Undo"
                size_hint: (0.33, 1)
                on_press: root.undo()
            Button:
                id: cancel_button
                text: ">"
                size_hint: (0.33, 1) 
                on_press: root.go_forward()