<LandingScreen>:
    name: '_landing_screen_'
    id: first_screen
    
    BoxLayout:
        orientation: "vertical"
        id: filemanager
        Label: 
            id: landing_title
            size_hint: (1.0,0.2)
            text: "Please choose your pickle file for verification :"
        FileChooserIconView:
            size_hint: (1.0,0.8)
            id: filechooser
            path: "./"
            on_selection: app.path = self.selection and self.selection[0] or ''
    BoxLayout:
        orientation: "horizontal"
        id: first_screen_boxlayout
        size_hint: (1.0,0.1)
        TextInput:
            hint_text: 'Start Page:'
            on_text : app.page_num = self.text
        ToggleButton:
            text: 'Preloaded?'
            on_press : app.preloaded = True if self.state == 'down' else False
        Button:
            text: 'Start!'
            on_press : app.start_verf() 
       


<VerfScreen>:
    name: '_verf_screen_'
    id: verf_screen
    BoxLayout:
        orientation: "vertical"
        id: verf_screen_boxlayout
        
        BoxLayout:
            orientation: "horizontal"
            id: attributes_labels
            size_hint: (1, 0.3)
            Label:
                id: boulder_title
                text: root.boulder_number
                font_name: '/System/Library/Fonts/Supplemental/Times New Roman.ttf'
            Label:
                id: verf_title
                color : root.verf_colour
                text: root.verf
                font_name: '/System/Library/Fonts/Supplemental/Times New Roman.ttf'
            Label:
                id: page_title
                text: root.page_number
                font_name: '/System/Library/Fonts/Supplemental/Times New Roman.ttf'
            Label:
                id: location_title
                text: root.current_location
                font_name: '/System/Library/Fonts/Supplemental/Times New Roman.ttf'
            Label:
                id: rocktype_title
                text: root.current_rocktype
                font_name: '/System/Library/Fonts/Supplemental/Times New Roman.ttf'
            Label:
                id: size_title
                text: root.current_size
                font_name: '/System/Library/Fonts/Supplemental/Times New Roman.ttf'
            Label:
                id: bnum_title
                text: root.current_bnum
                font_name: '/System/Library/Fonts/Supplemental/Times New Roman.ttf'
            Label:
                id: aut_title
                text: root.current_aut
                font_name: '/System/Library/Fonts/Supplemental/Times New Roman.ttf'

               
                
        BoxLayout:
            id: image_box_layout
            orientation : "horizontal"
            ScrollView:
                Image:
                    id: kk
                    size_hint : (1, 1)
                    texture: root.beeld.texture
                    
            TextInput:
                id: verf_text
                text: root.currenttext
                focus: True 
                font_name: '/System/Library/Fonts/Supplemental/Times New Roman.ttf'
        BoxLayout:
            id: button_boxlayout
            orientation: "horizontal"
            padding: 10
            size_hint: (1, 0.15)
            Button:
                id: accept_button
                text: "<"
                size_hint: (0.25, 1)
                on_press: root.go_back()
            Button:
                id: bad_button
                text: "Bad"
                size_hint: (0.25, 1)
                on_press: root.bad_boulder(False)
            Button:
                id: save
                text: "Save Progress"
                size_hint: (0.25,1)
                on_press: root.save_progress()
            Button:
                id: good_button
                text: "Good"
                size_hint: (0.25, 1)
                on_press: root.good_boulder(False)
            Button:
                id: cancel_button
                text: ">"
                size_hint: (0.25, 1) 
                on_press: root.go_forward()